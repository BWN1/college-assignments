<main>
    <h1>Welcome {{user.name}}!</h1>
    <div class="content-wrapper">
        <div class="room-actions">
            <h1 class="form-title">Create a room</h1>
            <form action="/dashboard" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-input">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="input-box" placeholder="Title">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-input">
                        <label for="price">Price</label>
                        <input type="text" name="price" class="input-box" placeholder="Price">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-input">
                        <label for="description">Description</label>
                        <textarea name="description" class="input-box"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-input">
                        <label for="location">Location</label>
                        <input type="text" name="location" class="input-box" placeholder="Location">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-input">
                        <label for="image">Image</label>
                        <input type="file" name="image" class="input-box">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-input">
                        <input type="submit" value="Create room" class="submit-form">
                    </div>
                </div>
            </form>
        </div>
        <div class="room-listings">
            {{#if rooms}}
                {{#each rooms}}
                    <section class="room-card">
                        <img src="{{image}}" alt="Room 1" loading="lazy" class="room-image">
                        <p class="room-location">{{location}}</p>
                        <h3 class="room-title">{{title}}</h3>
                        <p class="room-price">${{price}} CAD/night</p>
                    </section>
                {{/each}}
            {{else}}
                <h1>There are no rooms listed</h1>
            {{/if}}
        </div>
    </div>
</main>