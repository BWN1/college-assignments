<main>
    {{#if message}}
            {{> errorMessage}}
    {{/if}}

    <div class="form-card create-room">
        <h1 class="form-title">Create a room</h1>
        <form action="/dashboard/create-room" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-input">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="input-box" placeholder="Title">
                </div>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <label for="price">Price</label>
                    <input type="text" name="price" class="input-box" placeholder="Price">
                </div>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <label for="description">Description</label>
                    <textarea name="description" class="input-box"></textarea>
                </div>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <label for="location">Location</label>
                    <select name="location" class="input-box">
                        <option value="toronto">Toronto, ON</option>
                        <option value="vancouver">Vancouver, BC</option>
                        <option value="edmonton">Edmonton, AB</option>
                        <option value="montreal">Montreal, QC</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <label for="image">Image</label>
                    <input type="file" name="image" class="input-box" accept="image/png, image/jpg, image/jpeg">
                </div>
                <div class="image-upload-warning">Supported file types are .png, .jpg, .jpeg</div>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <input type="submit" value="Create room" class="submit-form">
                </div>
            </div>
        </form>
    </div>
</main>